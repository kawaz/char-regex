  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kawaz/char-regex.git"
  },
  "homepage": "https://github.com/kawaz/char-regex#readme",
  "bugs": {
    "url": "https://github.com/kawaz/char-regex/issues"
